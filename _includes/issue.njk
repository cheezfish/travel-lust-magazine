---
layout: 'layout.njk'
---
<article class="issue-viewer">
    <h2>{{ title }}</h2>
    <p><em>Published on: {{ date | readableDate }}</em></p>

    <div class="pdf-viewer">
        <iframe 
            src="https://mozilla.github.io/pdf.js/web/viewer.html?file=https://travellustmagazine.com{{ pdf_file }}"
            width="100%" 
            height="800px"
            style="border: 1px solid #ccc;"
            loading="lazy">
            <p>PDF viewer loading... <a href="{{ pdf_file }}" target="_blank">Click here if it doesn't load</a></p>
        </iframe>
    </div>

    <div class="pdf-controls" style="margin: 20px 0; text-align: center;">
        <a href="{{ pdf_file }}" target="_blank" class="btn primary">üìñ Open PDF</a>
        <a href="{{ pdf_file }}" download class="btn secondary">‚¨áÔ∏è Download</a>
        <button onclick="switchToGoogle()" class="btn secondary">üîÑ Try Google Viewer</button>
    </div>

    <hr>
    <h3>Comments & Thoughts</h3>
    <p>We'd love to hear what you think! Visit our <a href="/submissions/">submissions page</a> to send us a message.</p>
</article>

<style>
.pdf-viewer {
    width: 100%;
    margin: 20px 0;
}

.pdf-controls {
    display: flex;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
}

.btn {
    display: inline-block;
    padding: 12px 20px;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 500;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s;
}

.btn.primary {
    background: #2563eb;
    color: white;
}

.btn.primary:hover {
    background: #1d4ed8;
}

.btn.secondary {
    background: #6b7280;
    color: white;
}

.btn.secondary:hover {
    background: #4b5563;
}

@media (max-width: 768px) {
    .pdf-viewer iframe {
        height: 500px;
    }
    
    .pdf-controls {
        flex-direction: column;
        align-items: center;
    }
    
    .btn {
        width: 200px;
        margin: 5px 0;
    }
}
</style>

<script>
function switchToGoogle() {
    const iframe = document.querySelector('.pdf-viewer iframe');
    const pdfUrl = 'https://travellustmagazine.com{{ pdf_file }}';
    
    if (iframe.src.includes('mozilla.github.io')) {
        // Switch to Google viewer
        iframe.src = `https://docs.google.com/viewer?url=${encodeURIComponent(pdfUrl)}&embedded=true`;
        document.querySelector('button').textContent = 'üîÑ Try PDF.js Viewer';
    } else {
        // Switch back to PDF.js
        iframe.src = `https://mozilla.github.io/pdf.js/web/viewer.html?file=${encodeURIComponent(pdfUrl)}`;
        document.querySelector('button').textContent = 'üîÑ Try Google Viewer';
    }
}
</script>